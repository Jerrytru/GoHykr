<p id="notice"><%= notice %></p>
<div class="itineraryContainer">
<h1>Itineraries</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Available seat</th>
      <th>Projected eta</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @itineraries.each do |itinerary| %>
      <tr>
        <td><%= itinerary.start_date %></td>
        <td><%= itinerary.end_date %></td>
        <td><%= itinerary.available_seat %></td>
        <td><%= itinerary.projected_eta %></td>
        <td><%= itinerary.description %></td>
        <td><%= itinerary.user.first_name %></td>
        <td><%= link_to 'Show', itinerary %></td>
        <td><%= link_to 'Edit', edit_itinerary_path(itinerary) %></td>
        <% if @current_user.id == itinerary.user.id %>
          <td><%= link_to 'Destroy', itinerary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Itinerary', new_itinerary_path, class:"btn btn-primary" %>
</div>
