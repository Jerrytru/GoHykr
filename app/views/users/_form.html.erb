<%= form_with model: user, local: false do  |f|  %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :gender_name %>
    <%= f.select :gender, ["male", "female"] %>
  </div>
  <div>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>
  <div>
    <%= f.label :avatar_image %>
    <%= f.file_field :avatar_image %>
  </div>
  <div>
    <%= f.hidden_field :id %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<%end %>
